{
  "title": "Ground Station - Telemetry",
  "uid": "ground-station-telemetry",
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 0,
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
      {
        "id": 1,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "type": "timeseries",
        "title": "Temperature",
        "targets": [
          {
            "expr": "temperature_value",
            "legendFormat": "{{sensor}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "celsius",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 2,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "type": "timeseries",
        "title": "Telemetry Value",
        "targets": [
          {
            "expr": "telemetry",
            "legendFormat": "{{station}} - {{sensor}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 3,
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 8
        },
        "type": "timeseries",
        "title": "All Metrics",
        "targets": [
          {
            "expr": "{__name__=~\".+\"}",
            "legendFormat": "{{__name__}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 4,
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 16
        },
        "type": "stat",
        "title": "Latest Temperature",
        "targets": [
          {
            "expr": "temperature_value",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "celsius",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "blue"
                },
                {
                  "value": 20,
                  "color": "green"
                },
                {
                  "value": 30,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 16
        },
        "type": "stat",
        "title": "Metrics Count",
        "targets": [
          {
            "expr": "count({__name__=~\".+\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      }
    ],
  "overwrite": true
}
